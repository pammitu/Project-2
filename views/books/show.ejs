<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>

    <h2><%= book.title %></h2>

    <section>
        <table>
            <thead>
                <tr>
                    <th>Cover Image</th>
                    <th>Author</th>
                    <th>Summary</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><img src="<%= book.coverImage %>" alt="Cover Image"></td>
                    <td><%= book.author %></td>
                    <td><%= book.summary %></td>
                </tr>
            </tbody>
        </table>
    </section>
    
    <section>
        <h3>Reviews</h3>

        <% if(book.reviews.length) { %>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Review</th>
                        <th>Rating</th>
                    </tr>
                </thead>
                <tbody>
                    <% book.reviews.forEach(r => { %>
                        <tr>
                            <td><%= r.createdAt.toLocaleDateString() %></td>
                            <td><%= r.content %></td>
                            <td><%= r.rating %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <h5>No Reviews Yet</h5>
        <% } %>

        <form action="/books/<%= book._id %>/reviews" method="POST">
            <label>
                Review:
                <textarea name="content" cols="20" rows="10" required></textarea>
            </label>
            <label>
                Rating
                <select name="rating">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5" selected>5</option>
                </select>
            </label>
            <input type="submit" value="Add Review">
        </form>
    </section>

    <section>
        <h3>Notable Quotes</h3>
        <form action="/books/<%= book._id %>/quotes" method="POST">
            <label>
                Quote:
                <textarea name="content" cols="20" rows="10" required></textarea>
            </label>
            <label>
                Character:
                <input type="text" name="character">
            </label>
            <label>
                Page Number:
                <input type="number" name="pageNumber">
            </label>
            <button type="submit">Add Quote</button>
        </form>

        <% if(book.notableQuotes.length) { %>
            <table>
                <thead>
                    <tr>
                        <th>Quote</th>
                        <th>Character</th>
                        <th>Page Number</th>
                    </tr>
                </thead>
                <tbody>
                    <% book.notableQuotes.forEach(q => { %>
                        <tr>
                            <td><%= q.quote %></td>
                            <td><%= q.characterName %></td>
                            <td><%= q.pageNum %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <h5>No Notable Quotes</h5>
        <% } %>
    </section>

    <%- include('../partials/footer') %>
</body>
</html>